
  <div>
    <h1>
      Edit director
    </h1>

    <% @director.errors.full_messages.each do |message|  %>
      <p style="color: red"><%= message %></p>
    <% end %>

    <%= form_with(url: directors_path) do %>

      <div>
        <%= label_tag :dob %>
        <%= date_field_tag :dob, @director.dob %>
      </div>

      <div>
        <%= label_tag :name %>
        <%= text_field_tag :name, @director.name%>
      </div>

      <div>
        <%= label_tag :bio  %>
        <%= text_area_tag :bio, @director.bio, rows: 3%>
      </div>

      <%= button_tag "Edit Director" %>

    <% end %>

  </div>
