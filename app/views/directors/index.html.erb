<div>
  <div>
    <h1>
      List of all directors
    </h1>
  </div>
</div>

<hr>

<div>
  <%=  link_to "Add a new director", new_director_path %>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Dob
        </th>

        <th>
          Name
        </th>

        <th>
          Bio
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @directors.each do |director| %>
      <tr>
        <td>
          <%= director.id %>
        </td>

        <td>
          <%= director.dob %>
        </td>

        <td>
          <%= director.name %>
        </td>

        <td>
          <%= director.bio %>
        </td>

        <td>
          <%= time_ago_in_words(director.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(director.updated_at) %> ago
        </td>

        <td>
        
          <%= link_to "Show details", director %>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
